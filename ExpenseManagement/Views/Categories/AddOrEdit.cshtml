@model ExpenseManagement.Models.Category

@{
    ViewData["PageTitle"] = Model.CategoryId==0?"Add a New Category" : "Edit Category";
}

<div class="row">
    <div class="col-md-7">
        <div class="widget p-5">
            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="CategoryId" value="@Model.CategoryId" />
                <div class="mb-3">
                    <ejs-radiobutton id="radio1" label="Expense" ejs-for="Type" value="Expense" checked="true"></ejs-radiobutton>
                    <ejs-radiobutton id="radio2" label="Income" ejs-for="Type" value="Income"></ejs-radiobutton>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <ejs-textbox id="Title" name="Title" placeholder="Title" value="@Model.Title" floatLabelType="Auto"></ejs-textbox>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <ejs-textbox id="Icon" placeholder="Icon" ejs-for="Icon" floatLabelType="Auto"></ejs-textbox>
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>

                <ejs-button id="submit" type="submit" content="Submit" cssClass="e-success"></ejs-button>
            </form>
        </div>
        
    </div>
    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center" style="background-color:#212b36">
            <i class="fa-solid fa-shapes fa-2xl"></i>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
